<view class="content address"><view class="row b-b"><text class="tit">收货人</text><input class="input" type="text" placeholder="请填写收货人姓名" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','name','$event',[]],['addressData']]]]]}}" value="{{addressData.name}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">手机号码</text><input class="input" type="number" placeholder="请填写收货人手机号" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','mobile','$event',[]],['addressData']]]]]}}" value="{{addressData.mobile}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">所在地址</text><text class="input">{{''+addressData.addressName+''}}</text><text data-event-opts="{{[['tap',[['chooseLocation',['$event']]]]]}}" class="yticon icon-shouhuodizhi" bindtap="__e"></text></view><view class="row b-b"><text class="tit">详细地址</text><input class="input" type="text" placeholder="道路,门牌号,小区,楼栋号,单元室等" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','area','$event',[]],['addressData']]]]]}}" value="{{addressData.area}}" bindinput="__e"/></view><view class="row default-row b-b"><text class="tit default">地址标签</text><view class="address-label"><text class="default-label">家庭</text><text class="default-label default-label-mid">公司</text><text class="default-label">学校</text></view></view><view class="row default-checkbox"><text class="tit default">设置为默认地址</text><label><checkbox-group data-event-opts="{{[['change',[['switchChange',['$event']]]]]}}" bindchange="__e"><checkbox style="transform:scale(0.7);border-radius:50%;" value="cb" checked="true"></checkbox></checkbox-group></label></view><button data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="add-btn" bindtap="__e">保存地址</button></view>