page {
  background: #E3E3E3;
}
.consult-business {
  width: 100%;
  height: 310rpx;
  background: white;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding-left: 20rpx;
  padding-top: 44rpx;
  border-top: 1px solid #E3E3E3;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
      -ms-flex-pack: start;
          justify-content: flex-start;
}
.consult-business ._img {
    width: 34rpx;
    height: 32rpx;
    margin-right: 35rpx;
}
.consult-business .consult-right {
    width: 100%;
}
.consult-business .consult-right .consult-shop {
      border-bottom: 1px solid #E3E3E3;
      padding-bottom: 40rpx;
      margin-bottom: 36rpx;
}
.consult-business .consult-right .consult-shop text {
        display: block;
}
.consult-business .consult-right .consult-shop .consult-shopName {
        font-size: 28rpx;
        font-weight: 600;
        color: #454545;
        line-height: 16rpx;
        margin-bottom: 15rpx;
}
.consult-business .consult-right .consult-refund text {
      display: block;
      font-size: 24rpx;
      font-weight: 500;
      color: #545454;
      line-height: 48rpx;
}
.consult-business .consult-right .consult-refund text:before {
      content: '';
      width: 16rpx;
      height: 16rpx;
      border-radius: 50%;
      background: #E3E3E3;
      margin-right: 18rpx;
      vertical-align: middle;
      display: inline-block;
}
.time {
  font-size: 22rpx;
  font-weight: 500;
  color: #545454;
}
.consult-user {
  margin-top: 10rpx;
  border-top: 0;
  height: auto;
  padding-bottom: 36rpx;
}
.consult-user ._img {
    width: 50rpx;
    height: 50rpx;
}
.userMsg text {
  font-size: 24rpx;
  font-weight: 500;
  color: #545454;
  line-height: 40rpx;
}
.userMsg .userBlock {
  display: block;
}

