<view class="order-details"><view class="order-state"><block wx:if="{{order.status!=1&&order.status!=9&&order.status!=4}}"><text class="toBeShipped" style="{{'color:'+(order.color)+';'}}">{{order.statusMsg}}</text></block><block wx:if="{{order.status==1}}"><text class="toBeFinish"><text class="toBeFinishBlock toBeFinishBlockFirst">待付款</text><text class="toBeFinishBlock toBeFinishBlockSecond">剩余<text>23小时22分</text>自动关闭</text></text></block><block wx:if="{{order.status==4}}"><text class="payClose"><text>交易关闭</text><text>订单取消</text></text></block><text class="{{['iconfont',order.img]}}" style="font-size:32px;"></text></view><block wx:if="{{order.status==9}}"><view class="close"><view class="_ul"><view class="_li"><text>退款总金额</text><text class="closePrice">￥120.00</text></view><view class="_li"><text>退回广发银行</text><text>￥120.00</text></view></view><van-steps vue-id="1" steps="{{steps}}" active="{{active}}" data-com-type="wx" bind:__l="__l"></van-steps><view data-event-opts="{{[['tap',[['consult',['$event']]]]]}}" class="i-top b-b" bindtap="__e"><text class="time">协商历史</text><text class="cell-more yticon icon-you"></text></view></view></block><view class="order-address"><image src="{{$root.m0}}" class="_img"></image><view class="order-ad-user"><text class="phone">{{order.receiverName+order.receiverPhone}}</text><text class="address">{{order.receiverProvince+order.receiverCity+order.receiverRegion+order.receiverDetailAddress}}</text></view></view><view class="order-goods"><view class="order-item"><view class="i-top b-b"><image class="shopLogo _img" src="{{$root.m1}}" alt></image><text class="time">麦田圈官网旗舰店</text><text class="cell-more yticon icon-you"></text></view><view class="goods-box-single b-b"><image class="goods-img" src="{{order.productPic}}" mode="aspectFill"></image><view class="right"><text class="title ellipsis">{{order.productName}}</text><text class="attr-box">{{"规格:"+(order.sp1+order.sp2)}}</text><text class="price">{{'￥'+order.productPrice}}</text></view><view class="goods-right"><text class="number">{{"X"+order.productQuantity}}</text></view></view></view></view><view class="order-list"><view class="_ul"><view class="_li"><text>订单备注</text><text>{{order.note}}</text></view><view class="_li"><text>商品总价</text><text class="order-list-bold">{{'￥'+order.totalAmount}}</text></view><view class="_li"><text>抵扣积分</text><text class="order-list-bold">{{100+'分'}}</text></view><view class="_li"><text>商品优惠</text><text class="order-list-bold">{{'-￥'+order.promotionAmount}}</text></view><view class="_li"><text>实付合计</text><text class="order-list-bold">{{'￥'+order.payAmount}}</text></view></view></view><view class="{{['order-pay',(statuss!=4)?'marginBottom':'']}}"><view><text>订单编号：</text><text>{{order.orderSn}}</text></view><block wx:if="{{statuss!=1}}"><view><text>支付流水号：</text><text>{{order.orderMsg.num}}</text></view></block><view><text>订单创建时间：</text><text>{{order.createTime?$root.m2:''}}</text></view><block wx:if="{{statuss!=1}}"><view><text>订单付款时间：</text><text>{{order.paymentTime?$root.m3:''}}</text></view></block><block wx:if="{{statuss!=1}}"><view><text>支付方式：</text><text>{{order.payType==0?'未支付':order.payType==1?'支付宝':'微信'}}</text></view></block></view><block wx:if="{{show}}"><view class="foot"><button data-event-opts="{{[['tap',[['logisticsTap',['$event']]]]]}}" class="btn1" bindtap="__e">{{order.wuliu}}</button><block wx:if="{{order.status!=4}}"><button class="btn2">{{order.pay}}</button></block></view></block></view>