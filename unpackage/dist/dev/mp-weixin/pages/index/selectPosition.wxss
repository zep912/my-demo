.mp-search-box {
  box-sizing: border-box;
  padding: 0 20rpx;
  width: 100vw;
  height: 8vh;
}
.mp-search-box .select-item {
    position: relative;
    font-size: 32rpx;
    height: 60rpx;
    line-height: 60rpx;
}
.mp-search-box .uni-button, .mp-search-box button {
    position: absolute;
    top: 0;
    right: 0;
    height: auto;
    line-height: auto;
    border-radius: 30rpx;
}
.select-content {
  box-sizing: border-box;
  border-top: 1vh solid #f2f2f2;
  height: 92vh;
}
.select-content .header {
    padding: 0 40rpx;
    height: 8vh;
    line-height: 8vh;
    color: #F7B62C;
    font-size: 34rpx;
}
.select-content .body {
    font-size: 32rpx;
    height: 75vh;
    overflow-y: auto;
}
.select-content .body .item-list {
      padding: 0 40rpx;
      height: 5vh;
      line-height: 5vh;
}

